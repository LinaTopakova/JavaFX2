<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafx2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Canvas fx:id="canvas"  height="300.0" width="370.0" />
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <Button onAction="#drawCircle" mnemonicParsing="false" prefHeight="26.0" prefWidth="115.0" text="Круг"/>
        <Button onAction="#clear" mnemonicParsing="false" prefHeight="26.0" prefWidth="123.0" text="Clear"/>
        <Button onAction="#drawRectangle" mnemonicParsing="false" prefHeight="26.0" prefWidth="115.0" text="Прямоугольник"/>
    </HBox>

    <Label fx:id="welcomeText" />
</VBox>
